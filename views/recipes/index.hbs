<h1>All Recipes</h1>

{{#if user}}
  <a href="/recipes/create">Create New Recipe</a>
{{/if}}

{{#if recipes.length}}
  {{#each recipes}}
    <div class="recipe">
      <h2>{{this.title}}</h2>
      <p><strong>Created by:</strong> {{this.creator.email}}</p>
      <p><strong>Created on:</strong> {{this.createdAt}}</p>

      <h3>Ingredients:</h3>
      <ul>
        {{#each this.ingredients}}
          <li>{{this}}</li>
        {{/each}}
      </ul>

      <h3>Instructions:</h3>
      <p>{{this.instructions}}</p>

      {{#if this.isOwner}}
        <a href="/users/profile/recipes/{{this._id}}/edit">Edit</a>
        <a
          href="/users/profile/recipes/{{this._id}}/delete"
          onclick="return confirm('Are you sure you want to delete this recipe?')"
        >Delete</a>
      {{/if}}
    </div>
  {{/each}}
{{else}}
  <p>No recipes found.</p>
{{/if}}